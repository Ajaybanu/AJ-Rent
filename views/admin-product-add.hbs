<section>
  <div class="container mt-5">
    <div class="row" style="background-color: rgb(187, 221, 210);">

      <div class="col-md-6">
        <h2 class="text-center">ADD PRODUCTS</h2>
        <form action="/admin/postaddproduct" method="post" enctype="multipart/form-data">
          <label for="">NAME</label>
          <input type="text" name="name" class="form-control">
          <label for="">DESCRIBSTION</label>
          <input type="text" name="description" class="form-control">
          
           <label for="">PRICE</label>
          <input type="number" name="price" class="form-control">
          <div class="form-group col-md-6"> 
			                						<label>Category Name *</label>
													<select id="category" name="category">
                                                      {{#each category}}
                                                    <option>{{this.name}}</option>
                                                         {{/each}}
                                                     </select>
			                						
			                					</div><!-- End .col-sm-6 -->

         
          <label for="">IMAGE</label>
          <input type="file" name="image" class="form-control">
          <button type="submit" class="btn btn-danger mt-4">Add</button>
        </form>
      </div>

    </div>

  </div>
</section>