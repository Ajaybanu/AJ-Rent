<main>
   <div class="page-wrapper">
  <div class="container">
    <h1 class="text-center mb-4">Your Orders</h1>
    {{#if allOrders}}
      <div class="table table-orders">
        <table class="table table-bordered">
          <thead style="background-color: #343a40;">
            <tr>
              <th style="text-align:center" style="text-align:center" scope="col" >Order ID</th>
              <th style="text-align:center" scope="col" >Total Amount</th>
              <th style="text-align:center" scope="col" >Ordered Items</th>
              <th style="text-align:center" scope="col" >Status</th>
              <th style="text-align:center" scope="col" >Action</th>
            </tr>
          </thead>
          <tbody>
            {{#each allOrders}}
              <tr>
                <td align="center">{{this.orderId}}</td>
                <td  align="center">${{this.totalPrice}}</td>
                <td  align="center" >
                  <div class="colomn">
                    {{#each this.products}}
                      {{#each this}}
                        <div class="text-center mb-2" >
                          <p class="text-muted mb-0">Name: {{this.productName}}</p>
                          <p class="text-muted mb-0 small">Price: {{this.price}}</p>
                          <p class="text-muted mb-0 small">Qty: {{this.quantity}}</p>
                          <p class="text-muted mb-0 small">Days Of Rent: {{this.daysOfRent}}</p>
                        </div>
                      {{/each}}
                    {{/each}}
                  </div>
                </td>
                <td align="center" >{{this.orderStatus}}</td>
                <td  align="center" >
                  {{#equal this.orderStatus "Confirmed"}}
                    <form action="/cancelOrder/{{this.id}}" method="post">
                      <button class="btn btn-danger" type="submit">Cancel Order</button>
                    </form>
                  {{/equal}}
                </td>
              </tr>
            {{/each}}
          </tbody>
        </table>
      </div>
    {{else}}
      <p class="text-center">You have no orders yet.</p>
    {{/if}}
  </div>
  </div>
</main>

