<div class="page-wrapper">


	<main class="main">
		<div class="page-header text-center" style="background-image: url('assets/images/page-header-bg.jpg')">
			<div class="container">
				<h1 class="page-title">Shopping Cart<span>Shop</span></h1>
			</div><!-- End .container -->
		</div><!-- End .page-header -->
		<nav aria-label="breadcrumb" class="breadcrumb-nav">
			<div class="container">
				<ol class="breadcrumb">
					<li class="breadcrumb-item"><a href="/">Home</a></li>

					<li class="breadcrumb-item active" aria-current="page">Shopping Cart</li>
				</ol>
			</div><!-- End .container -->
		</nav><!-- End .breadcrumb-nav -->

		<div class="page-content">
			<div class="cart">
				<div class="container">
					<div class="row">

						<div class="col-lg-9">
							{{#if Cart}}
							<table class="table table-cart table-mobile">
								<thead>
									<tr>
										<th>Image</th>
										<th>Product</th>
										<th>Brand</th>

										<th>Price</th>


										<th></th>
									</tr>
								</thead>

								<tbody>
									
									{{#each Cart }}

									<div>
										<tr>
											<td class="product-col">
												<div class="product">
													<figure class="product-media">
														<a href="/productdetails/{{this.id}}">
															<img src="{{this.image}}" alt="Product image">
														</a>
													</figure>
												</div><!-- End .product -->
											</td>
											<td><a href="/productdetails/{{this.id}}">
													<h3 class="product-title">{{this.name}}</h3>
												</a></td>
											<td class="product-title">{{this.brand}}</td>

											<td class="product-title">{{this.price}}</td>





											<td class="remove-col">
												<form action="/deletecart/{{this.id}}" method="post"><button
														type="submit" class="btn-remove"><i
															class="icon-close"></i></button></form>
											</td>




										</tr>
									</div>

									

									
								</tbody>
								{{/each}}
								{{else}}
									<h2>please add some products to your cart . . .</h2>
									{{/if}}
							</table><!-- End .table table-wishlist -->
						</div>
						{{#if cartProducts}}
						<aside class="col-lg-3">
							<div class="summary summary-cart">
								<h3 class="summary-title">Proceed To Order</h3><!-- End .summary-title -->
                   
								<table class="table table-summary">
									<tbody>{{#each cartProducts}}
										<tr class="summary-subtotal">
											<td>Name:</td>
											<td>{{this.productName}}</td>
										</tr><!-- End .summary-subtotal -->
										<tr>
											<td>Price:</td>
											<td>{{this.price}}</td>
										</tr>
										<tr>
											<td>Days:</td>
											<td>{{this.daysOfRent}}</td>
										</tr>
										<tr>
											<td>Quantity:</td>
											<td>{{this.quantity}}</td>
										</tr>
										<tr>
											<td>Total:</td>
											<td>{{this.total}}</td>
										</tr>
										{{/each}}
										<tr>
                                            <td>apply Coupon:</td>
											<td>
												<form action="/checkout" method="post">
													
														{{#if coupdata}}
															<select id="category"  name="couponcode">
																{{#each coupdata}}
																<option>{{this.couponCode}}</option>
																{{/each}}
															</select>	
															{{else}}
															<h6>coupons not available</h6>
															{{/if}}
											</td>
										</tr>
										{{!-- <tr>
											<td>
											<div class="product-details-action">
											<button class="btn-product btn-cart" type="submit"> Apply</button>
											</div>
											</td>
										</tr> --}}
									            	
														
													
												
										<tr class="summary-total">
											<input type="hidden" value="{{totalPrice}}" name="totalPrice">
											<td>Total:</td>
											<td>{{totalPrice}}</td>
										</tr><!-- End .summary-total -->
									</tbody>
								</table><!-- End .table table-summary -->

							<button type="submit">	<a class="btn btn-outline-primary-2 btn-order btn-block">PROCEED TO
									CHECKOUT</a></button>
									</form>
						{{/if}}
							</div><!-- End .summary -->

							<a href="/viewproducts" class="btn btn-outline-dark-2 btn-block mb-3"><span>CONTINUE
									SHOPPING</span><i class="icon-refresh"></i></a>
						</aside><!-- End .col-lg-3 -->


						</form>

					</div><!-- End .row -->
				</div><!-- End .container -->
			</div><!-- End .cart -->
		</div><!-- End .page-content -->
	</main><!-- End .main -->
